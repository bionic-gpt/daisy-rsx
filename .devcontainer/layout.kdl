layout {
    tab {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane
            pane split_direction="horizontal" {
                pane {
                    command "cargo"
                    args "watch" "-w" "./content" "-w" "./src" "--no-gitignore" "-x" "run --bin decision"
                    cwd "/workspace/crates/decision"
                }
                pane {
                    cwd "/workspace/crates/decision"
                    command "tailwind-extra"
                    args "-i" "./input.css" "-o" "./dist/tailwind.css" "--watch"
                }
            }
        }
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane {

        }
        pane {
        }
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
}